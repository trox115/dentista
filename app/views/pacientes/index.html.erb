<p id="notice"><%= notice %></p>

<h1>Pacientes</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Morada</th>
      <th>Telefone</th>
      <th>Nif</th>
      <th>Cc</th>
      <th>Pem</th>
      <th>Obs</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pacientes.each do |paciente| %>
      <tr>
        <td><%= paciente.nome %></td>
        <td><%= paciente.morada %></td>
        <td><%= paciente.telefone %></td>
        <td><%= paciente.nif %></td>
        <td><%= paciente.cc %></td>
        <td><%= paciente.pem %></td>
        <td><%= paciente.obs %></td>
        <td><%= link_to 'Show', paciente %></td>
        <td><%= link_to 'Edit', edit_paciente_path(paciente) %></td>
        <td><%= link_to 'Destroy', paciente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

